{
  "name": "use-flagr",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "commit": "git-cz",
    "release": "multi-semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^17",
    "@commitlint/prompt": "^17",
    "commitizen": "^4.2.5",
    "commitlint-config-use-flagr": "workspace:*",
    "cross-env": "^7",
    "eslint-config-use-flagr": "workspace:*",
    "husky": "^8",
    "jest": "^29",
    "lint-staged": "^13",
    "msr-config-use-flagr": "workspace:*",
    "multi-semantic-release": "^3",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.15.0",
  "jest": {
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "release": {
    "extends": "msr-config-use-flagr"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.js": [
      "eslint --fix",
      "cross-env NODE_ENV=test jest --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "commitlint": {
    "extends": [
      "use-flagr"
    ]
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  }
}